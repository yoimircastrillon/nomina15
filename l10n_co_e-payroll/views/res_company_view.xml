<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_company_form_dian_extended_payroll" model="ir.ui.view">
        <field name="name">Datos de la compañía requeridos por la DIAN</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="dian" string="Configuracion DIAN Nómina Electrónica">
                    <group>
                        <field name="digital_certificate_payroll" />
                        <field name="identificador_set_pruebas_payroll" />
                        <field name="issuer_name_payroll" />
                        <field name="serial_number_payroll" />
                        <field name="software_identification_code_payroll" />
                        <field name="software_pin_payroll" />
                        <field name="password_environment_payroll" />
                        <field name="certificate_key_payroll" />
                        <field name="seed_code_payroll" />
                        <field name="document_repository_payroll" />
                        <field name="certificate_file_payroll" />
                        <field name="pem_file_payroll" />
                        <field name="production_payroll" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

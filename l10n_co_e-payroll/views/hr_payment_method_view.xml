<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="l10n_co_e-payroll.hr_payment_method_view_tree" model="ir.ui.view">
        <field name="name">hr.payment.method.tree</field>
        <field name="model">hr.payment.method</field>
        <field name="arch" type="xml">
            <tree string="Método de Pago">
                <field name="code" />
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="l10n_co_e-payroll.hr_payment_method_view_form" model="ir.ui.view">
        <field name="name">hr.payment.method.form</field>
        <field name="model">hr.payment.method</field>
        <field name="arch" type="xml">
            <form string="Método de Pago">
                <group>
                    <field name="code" />
                    <field name="name" />
                </group>
            </form>
        </field>
    </record>
    <record id="l10n_co_e-payroll.hr_payment_method_action" model="ir.actions.act_window">
        <field name="name">Método de Pago</field>
        <field name="res_model">hr.payment.method</field>
        <field name="view_mode">tree,form</field>
    </record>

    
</odoo>